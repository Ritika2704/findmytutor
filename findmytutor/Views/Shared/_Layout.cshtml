<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, <i></i>nitial-scale=1.0">
    <title>@ViewBag.Title - find my tutor</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @*<link rel="stylesheet" href="app.css" type="text/css" />*@
    <style>
        .myactive {
            color:yellow !important
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:blue; font-weight: bold;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                <a class="navbar-brand" href="@Url.Action("Index", "Home")" title="Find my tutor app">
                    <img style="max-width:100px;height:35px;" src="~/Content/images/tutor.png" alt="Find my tutor icon">
                </a>            
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new {@id="homelinkid", @class = "navbar-brand" })</li>
                    <li >@Html.ActionLink("Sign In", "LoginPage", "Login", new { area = "" }, new { @id = "loginpagelinkid", @class = "navbar-brand" })</li>
                    @*@<li >@Html.ActionLink("Sign Up", "RegisterPage", "Register")</li>*@
                </ul>
               
                  @*<input class="search" style="box-sizing: content-box; margin: 12px; border-radius: 4px; border: none; line-height: 24px; outline: 0;  "type="text" name="search" placeholder="Search ">*@
                
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>

            <p style="text-align: center;">&copy; @DateTime.Now.Year - findmytutor- All rights reserved.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
