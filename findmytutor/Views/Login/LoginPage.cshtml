@using findmytutor.Models;
@model LoginModel
@{
    ViewBag.Title = "LoginPage";
}

<html lang="en">
<head>
    <title>Find My Tutor Application</title>

    <link rel="manifest" href="/manifest.json">
    
    <link rel="stylesheet" href="~/Content/LoginPage(1).css" />
    <link rel="stylesheet" type="text/css" href="~/Content/LoginPage(2).css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&display=swap" rel="stylesheet" />
    <link href="~/Content/LoginPage(3).css" rel="stylesheet" />
    <link href="~/Content/LoginPage(4).css" rel="stylesheet" />
    <link href="~/Content/LoginPage(5).css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/LoginPage(6).css" />

</head>
<body>
    <section>
        @*<div class="header text-center">
                <header style="font-size: xx-large; color: black;">
                    SIGN IN
                </header>
            </div>*@
        <div class="content login-top">
            <div class="login-box scrollbar">
                <p class="p_continue">Please Sign In To Continue</p>
                <br />
                <center>@Html.ValidationSummary(true, null, new { @class = "text-danger", style = "font-size:20px" })</center>
                @if (Model != null)
                {
                    if (!string.IsNullOrEmpty(Model.ResultMessage))
                    {
                        <center><h3>@Model.ResultMessage</h3></center>
                    }
                }
                @using (Html.BeginForm("AuthenticateUser", "Login", FormMethod.Post, new { @id = "myform", @class = "mb-lg", role = "form", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-input">
                        @Html.TextBoxFor(m => m.Email, new { @id = "txtNumber1", @class = "form-control", @required = "required", @placeholder = "Enter Email", @autocomplete = "off" })
                    </div>
                    <div class="form-input">
                        @Html.TextBoxFor(m => m.Password, new { @id = "txtPassword", @class = "form-control", @required = "required", @placeholder = "Enter Password", @autocomplete = "off", @type = "password" })
                    </div>
                    <div class="rem-forgot">
                        @*<div class="form-check" style="margin-right: 100px;margin-top: 10px;">
                    <input checked="checked" class="form-check-input" type="checkbox">

                    <label class="form-check-label" for="chkSignIn">
                        Keep me signed in
                    </label>
                </div>*@
                        <a class="forgot-password" style="cursor:pointer">Forgot Password?</a>
                    </div>
                    <button type="submit" class="lrbtn">Sign In</button>

                    @*<p class="or">
                Or
            </p>*@
                    @*<ul class="social-media">
                <li>
                    <a id="signinButton" href="#">
                        <img class="google" src="#" />
                    </a>
                </li>
                <li>
                    <a id="btnFbLogin" href="#">
                        <img src="#" />
                    </a>
                </li>
            </ul>*@
                    @*<p>Don't Have An Account ?&nbsp;<a href="https://localhost:44396/Register/RegisterPage"> Sign Up</a></p>*@
                    <p>Don't Have An Account ?&nbsp;@Html.ActionLink("Sign Up", "RegisterPage", "Login", new { area = "" }, new { @class = "" })</p>
                }
            </div>
        </div>
    </section>
</body>
</html>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#loginpagelinkid").addClass("myactive");
            $("#homelinkid").removeClass("myactive");
        });
    </script>
}

